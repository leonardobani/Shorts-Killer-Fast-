{
  "manifest_version": 3,
  "name": "Shorts Killer [Fast]",
  "version": "1.6",
  "description": "Hides YouTube Shorts from all the pages of the website.",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentscript.js"]
    }
  ],
  "action": {
    "default_popup": "../popup/popup.html"
  },
  "icons": {
    "16": "/icons/shortsKillerLogo 16x16.png",
    "32": "/icons/shortsKillerLogo 32x32.png",
    "48": "/icons/shortsKillerLogo 48x48.png"
  }
}
